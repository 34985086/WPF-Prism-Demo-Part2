<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
	<Style x:Key="JamSoftWindowStyle" TargetType="{x:Type Window}">
        <Setter Property="Title" Value="JamSoft Microsoft Prism (CAL) Demo - Blue Theme" />
        <Setter Property="Foreground" Value="Transparent" />
		<Setter Property="Background" Value="Transparent" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="WindowState" Value="Normal"/>
        <Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type Window}">
					<Border Background="{DynamicResource AppBackground}" 
                            BorderBrush="{DynamicResource MainAppColour}" 
                            BorderThickness="2" 
                            SnapsToDevicePixels="True" 
                            ClipToBounds="True" 
                            CornerRadius="5">
						<AdornerDecorator>
							<ContentPresenter/>
						</AdornerDecorator>
					</Border>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>